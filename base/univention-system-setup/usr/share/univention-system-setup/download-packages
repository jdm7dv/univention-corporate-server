check_returnvalue () {
	local rval=$1 errormessage=$2
	if [ "${rval}" != 0 ]; then
		echo "${errormessage}" >&2
		exit "${rval}"
	fi
}

if [ -n "$1" ]; then
	echo "Usage $0"
	exit 2
fi

declare -a PACKAGES=(
	univention-server-master # TODO
	univention-server-backup # TODO
	univention-server-slave
	univention-server-member
	univention-basesystem
	univention-ad-connector
	univention-samba
	univention-management-console-module-adtakeover
	univention-printserver # TODO
	# FIXME univention-printquota
	univention-dhcp
	univention-fetchmail
	univention-radius
	# FIXME univention-virtual-machine-manager-node-kvm
	univention-mail-server
	# FIXME univention-nagios-server
	univention-pkgdb # TODO
	univention-samba4
	univention-s4-connector
	univention-squid
	# FIXME univention-virtual-machine-manager-daemon
	univention-welcome-screen
	univention-self-service
	univention-self-service-passwordreset-umc
	univention-self-service-master # TODO
	firefox-esr
	firefox-esr-l10n-de
)
CACHE='/var/cache/univention-system-setup/packages'
APT='/etc/apt/sources.list.d/05univention-system-setup.list'

mkdir -p "$CACHE"
chown "_apt" "$CACHE"
(
	cd "$CACHE" || exit $?
	install_cmd="$(univention-config-registry get update/commands/install)"

	for package in "${PACKAGES[@]}"
	do
		apt-get download -o Dir::Cache::Archives="$CACHE" $(LC_ALL=C $install_cmd --reinstall -s -o Debug::NoLocking=1 ${package} | sed -ne 's|^Inst \([^ ]*\) .*|\1|p')

		check_returnvalue $? "Failed to download required packages for ${package}"
	done

	apt-ftparchive packages . >Packages
	check_returnvalue $? "Failed to create ftparchive directory"
	gzip -k Packages

	[ -e "$APT" ] ||
		echo "deb [trusted=yes] file://$CACHE ./" >"$APT"
)

exit 0
