include /usr/share/dpkg/pkg-info.mk
PO_FILES := $(shell find modules/ -name "*.po")

.PHONY: build
build:: l10n

.PHONY: l10n
l10n: $(PO_FILES)

%.mo: %.po
	msgfmt --check --output-file "$@" "$<"

%.po:
	xgettext --output=$(@).tmp \
		--language=Python \
		--keyword=N_:1 \
		--package-name=$(DEB_SOURCE) \
		--package-version=$(DEB_VERSION) \
		--msgid-bugs-address="packages@univention.de" \
		--copyright-holder="Univention GmbH" \
		$(dir $@)*py
	if [ -e "$@" ]; then \
		msgmerge --update --backup=off --sort-output "$@" "$@".tmp; \
		touch "$@"; \
	else \
		cp "$<" "$@"; \
	fi
	$(RM) "$@".tmp

define PO_tmpl =
$(1): $$(wildcard $$(dir $(1))/*.py)
endef
$(foreach po,$(PO_FILES),$(eval $(call PO_tmpl,$(po))))
